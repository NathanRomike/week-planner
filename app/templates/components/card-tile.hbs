

  <div class="card">
    <div class="face front">
      <div class="venue__img" style="background-image: url({{business.photo}});">
        <div class="venue__title">
          <h1>{{business.name}}</h1>
          <h3>{{business.category}}</h3>
        </div>
        <h4>{{business.rating}}</h4>
      </div>
      <div class="venue__info">
        <h3>Price: {{business.price}}</h3>
        <h3><a href="{{business.url}}">{{business.url}}</a></h3>
        <i class="fa fa-star" {{action "addFavorite" business}}></i>
      </div>
    </div>
    <div class="face back">
      <p>
        {{business.shortDescription}}
      </p>
    </div>
  </div>
